<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvHelloWorld"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Màn hình Test Chức Năng"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnTestHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test HomePage" />

        <Button
            android:id="@+id/btnTestPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Thanh toán (M15)" />

        <Button
            android:id="@+id/btnTestHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Lịch sử đặt tour (M17)" />

        <Button
            android:id="@+id/btnTestFavorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Yêu thích (M19)" />

        <Button
            android:id="@+id/btnTestReviewForm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Form Đánh giá (M20)" />

        <Button
            android:id="@+id/btnTestReviewsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Danh sách Đánh giá (M21)" />

        <Button
            android:id="@+id/btnTestLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Login " />

        <Button
            android:id="@+id/btnTestDashb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Dashb " />

        <Button
            android:id="@+id/btnTestIti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Iti " />

        <Button
            android:id="@+id/btnTestCompare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Compare " />

        <Button
            android:id="@+id/btnTestInsur"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Insurance " />

        <Button
            android:id="@+id/btnTestTerms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/test_terms" />

        <Button
            android:id="@+id/btnTestCompanyInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Company Info" />

        <Button
            android:id="@+id/btnTestFAQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test FAQ" />

        <Button
            android:id="@+id/btnTestContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Contact (M32)" />

        <Button
            android:id="@+id/btnTestLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Language Settings" />

        <Button
            android:id="@+id/btnTestLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Logout Confirmation" />

        <Button
            android:id="@+id/btnTestNetworkError"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Test Network Error" />

    </LinearLayout>
</ScrollView>